{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "West US",
            "allowedValues": [
                "Brazil South",
                "East Asia",
                "East US",
                "Japan East",
                "Japan West",
                "North Central US",
                "North Europe",
                "South Central US",
                "West Europe",
                "West US",
                "Southeast Asia",
                "Central US",
                "East US 2"
            ],
            "metadata": {
                "description": "Public IP Deployment Location"
            }
        },
        "networkApiVersion": {
            "type": "string",
            "defaultValue": "2015-06-15",
            "allowedValues": [
                "2015-05-01-preview",
                "2015-06-15",
                "2016-03-30"
            ],
            "metadata": {
                "description": "API Version for the Network Resources"
            }
        },
        "publicIPAddressName": {
            "type": "string",
            "defaultValue": "publicIPAddress",
            "metadata": {
                "description": "Public IP Address Name"
            }
        },
        "tag": {
            "type": "object",
            "defaultValue": {
                "key1": "key",
                "value1": "value"
            },
            "metadata": {
                "description": "Tag Values"
            }
        },
        "publicIPdnsPrefix": {
            "type": "string",
            "defaultValue": "publicdnsprefix",
            "metadata": {
                "description": "Public IP DNS Prefix"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "comments": "Public IP Address Resource",
            "apiVersion": "[parameters('networkApiVersion')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('publicIPAddressName')]",
            "location": "[parameters('location')]",
            "tags": {
                "[parameters('tag').key1]": "[parameters('tag').value1]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('publicIPdnsPrefix')]"
                }
            }
        }
    ],
    "outputs": {
        "fqdn": {
            "value": "[concat('http://', reference(parameters('publicIPAddressName')).dnsSettings.fqdn)]",
            "type": "string"
        }
    }
}
